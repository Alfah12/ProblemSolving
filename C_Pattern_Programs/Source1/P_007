using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;

namespace lab
{
    class Program
    {
        static void Main()
        {
            patter7();
        }
        static int readRowsNumber()
        {
            Console.Write("Please Enter a number to define the rows: ");
            return int.Parse(Console.ReadLine());
        }
        static void patter7()
        {
            int rowsCount = readRowsNumber();

            int x = 1;
            int spacesCount = 7;

            for(int i = 0; i < rowsCount; i++)
            {

                for (int j = 1; j <= spacesCount; j++)
                {
                    Console.Write("  ");
                }
                spacesCount--;

                for (int j = 1; j <= x; j++)
                {

                    Console.Write("* ");
                }
                x += 2;
                Console.WriteLine();
            }
        }
    }
}
