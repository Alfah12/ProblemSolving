      static string[] splitString(string s, char splitAt)
        {

            List<string> splitedString = new List<string>();
            string tempString = "";

            s += " ";
            for (int i = 0; i < s.Length; i++)
            {
                if (s[i] == splitAt)
                {
                    splitedString.Add(tempString);
                    tempString = "";
                    continue;
                }

                else
                    tempString += s[i];
            }

            return splitedString.ToArray();
        }
