static int countSpeseficLetter(string s, char c)
        {
            int counter = 0;
            for (int i = 0; i < s.Length; i++)
                if (charToLowerCase(s[i]) == charToLowerCase(c))
                    counter++;
            return counter;
        }
        static char charToLowerCase(char c) => (int)c >= 65 && (int)c <= 90 ? (char)((int)c + 32) : c;
