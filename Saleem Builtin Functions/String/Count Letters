static bool isUpperChar(char c) =>
            (int)c >= 65 && (int)c <= 90;
static bool isLowerChar(char c) =>
            (int)c >= 97 && (int)c <= 122;
static bool isLetter(char c) =>
            isUpperChar(c) || isLowerChar(c);
static int countLetters(string s)
        {
            int counter = 0;

            for (int i = 0; i < s.Length; i++)
                if (isLetter(s[i]))
                    counter++;

            return counter;
        }
