static string[] splitString(string s, string delimeter)
        {
           string word = "";
            s += delimeter;

            List<string> splitedString = new List<string>();

            for (int i = 0; i < s.Length; i++)
            {
                if (s[i] != delimeter)
                    word += s[i];
                else
                {
                    splitedString.Add(word);
                    word = "";
                }
            }

            return convertListToArray(splitedString);
        }
